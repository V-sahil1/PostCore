{
  "compilerOptions": {
    "outDir": "./dist",

    "module": "CommonJS",
    "target": "ES2020",
    "types": ["node"],


    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "allowSyntheticDefaultImports": true,

    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",

    "isolatedModules": true,
    "skipLibCheck": true
  }
}
